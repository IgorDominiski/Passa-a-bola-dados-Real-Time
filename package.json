{
  "name": "passa-a-bola-iot",
  "version": "1.0.0",
  "description": "Plataforma de futebol feminino com integração IoT em tempo real",
  "main": "home.html",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "start:node": "npx http-server -p 8000",
    "test": "./scripts/test-mqtt.sh",
    "check": "./scripts/check-dependencies.sh",
    "deploy": "./scripts/deploy.sh",
    "dev": "python3 -m http.server 8000 --bind 0.0.0.0"
  },
  "keywords": [
    "futebol-feminino",
    "iot",
    "mqtt",
    "websocket",
    "javascript",
    "html5",
    "css3",
    "real-time",
    "sensors"
  ],
  "author": "Equipe Passa a Bola",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/passa-a-bola.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/passa-a-bola/issues"
  },
  "homepage": "https://github.com/seu-usuario/passa-a-bola#readme",
  "devDependencies": {
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "mqtt": "^5.3.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "python": ">=3.6.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "config": {
    "mqtt": {
      "broker": "test.mosquitto.org",
      "port": 8081,
      "topic": "passaabola/sensores",
      "protocol": "wss"
    }
  }
}
